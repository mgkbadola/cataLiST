<div class="container">
    <input type="text" id="search" class="search-box" placeholder="Search In Comments..."
           onkeyup="search('search','<%= header %>')">
</div>
<br/>
<div class="container">
    <table id="<%= header %>" class="table table-bordered">
        <colgroup>
            <col style="width: 70%"/>
            <col style="width: 20%"/>
            <col style="width: 10%"/>
        </colgroup>
        <thead>
        <tr style="background-color: #ff4500;">
            <th>Comment Data</th>
            <th>Original Post</th>
            <th>Subreddit</th>
        </tr>
        </thead>
        <tbody>
        <% for(let comment of comments){ %>
            <% if (comment['nsfw'] === true){ %>
            <tr style="background: red">
                <% }else{ %>
            <tr>
                <% } %>
                <td><%- comment["body"] -%></td>
                <td>
                    <a target="_blank" href="https://reddit.com<%= comment["link"] %>">
                        <%= comment["post"] %>
                    </a>
                </td>
                <td><%= comment["subreddit"] %></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
<br/>