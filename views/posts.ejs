<div class="container">
    <input type="text" id="search" class="search-box" placeholder="Search In Comments..."
           onkeyup="search('search','<%= header %>')">
</div>
<br/>
<div class="container">
    <table id="<%= header %>" class="table table-bordered">
        <colgroup>
            <col style="width: 80%"/>
            <col style="width: 20%"/>
        </colgroup>
        <thead>
        <tr style="background-color: #ff4500;">
            <th>Post Title</th>
            <th>Subreddit</th>
        </tr>
        </thead>
        <tbody>
        <% for(let post of posts){ %>
            <% if (post['nsfw'] === true){ %>
            <tr style="background: red">
                <% }else{ %>
            <tr>
                <% } %>
                <td>
                    <a target="_blank" href="https://reddit.com<%= post["link"] %>">
                        <%= post["title"] %>
                    </a>
                </td>
                <td><%= post["subreddit"] %></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
<br/>